{{ 'section-collection-grid.css' | asset_url | stylesheet_tag }}

<div class="collection-grid-ctn">
  <h2 class="collection-grid_title">{{ section.settings.header }}</h2>
  <div class="collection-grid_grid-ctn">
    {% for block in section.blocks %}
      <a class="collection-grid_grid-item" href="{{ block.settings.collection.url }}">
        <div class="collection-grid_img-ctn">
          <img src="{{ block.settings.collection.image | img_url: "Large" }}">
        </div>
        <h3 class="collection-grid_grid-title">{{ block.settings.collection.title }}</h3>
      </a>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "collection grid",
  "settings": [
  {
    "type": "text",
    "id": "header",
    "label": "Header"
  }
],
"blocks": [
  {
    "type": "collection",
    "limit": 4,
    "name": "Collection",
    "settings": [
      {
        "type": "collection",
        "id": "collection",
        "label": "collection"
      }
    ]
  }
  ],
  "presets": [
    {
      "name": "collection grid" 
    } 
  ]
}
{% endschema %}